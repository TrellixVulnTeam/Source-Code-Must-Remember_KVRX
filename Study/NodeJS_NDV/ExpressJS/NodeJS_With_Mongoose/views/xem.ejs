<%include ./layouts/header  %>


    <div class="container">
      <div class="jumbotron text-center">
        <h1 class="display-3">Xem dữ liệu</h1>
        <p class="lead"> MongoDB</p>
        <hr class="my-2">
       
      </div>
    
      <table class="table table-striped table-inverse  table-bordered table-hover table-inverse">
        <thead class="thead-inverse">
          <tr>
            <th>Tên</th>
            <th>Số điện thoại</th>
            <th>Action</th>
          </tr>
          </thead>
          <tbody>
           


            <%
            
              db.forEach(data => {
                %>

                <tr>
                  <td scope="row"><%=data.ten  %></td>
                  <td><%= data.dienthoai  %></td>
                  <td>
                    
                        <form method="POST" action="/xoa/<%=data._id  %>?_method=DELETE">
                          <button type="submit" class="btn btn-danger">Xóa</button>
                        </form>
                        
                          <a class="btn btn-primary" href="/sua/<%=data._id  %>">Sửa</a>
                  
                  
                  
                
                
                </td>
                </tr>

                <%
              })
            
            %>
          </tbody>
      </table>

  </div>


    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
